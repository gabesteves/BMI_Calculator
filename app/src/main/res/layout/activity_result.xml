<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:layout_marginTop="16dp"
        android:text="Your BMI is:"
        android:textSize="18sp"
        android:textColor="#FF018786"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_result"
        android:textColor="#FF018786"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        tools:text="Hello 2"
        android:textSize="32sp"
    />
    <TextView
        android:id="@+id/tv_classification"
        tools:text="Classification: Normal"
        android:textSize="22sp"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    <TextView
        android:text="See bellow the table:"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    <TextView
        android:text="BMI is less than 18.5, it falls within the underweight range."
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    <TextView
        android:text="BMI is 18.5 to 24.99, it falls within the healthy weight range."
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    <TextView
        android:text="BMI is 25 to 29.99, it falls within the overweight range."
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="BMI is 30 or higher, it falls within the obesity range."
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>